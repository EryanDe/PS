{% block stylesheets %}
        <link rel="stylesheet" href="{{asset('css/header.css')}}">
{% endblock %}

{% block javascripts %}
        <script src="{{asset('JS/script.js')}}"> </script>
{% endblock %}

{% block body %}
<div class="livebar">
        <p><a href="{{ path('app_accueil') }}" target ="blank">Accéder au site</a></p>
</div>

<div class="admin-container">
    <div class="admin-dashboard-header">
        <h1><a href="{{ path('app_admin') }}">Tableau de bord</a></h1>
</div>
   <div class="admin-detail-container">
    <div class="admin-detail-header">
        <h1>Détails de l'exercice</h1>
    </div>

    <table class="admin-detail-table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ exercice.id }}</td>
            </tr>
            <tr>
                <th>Titre_exercice</th>
                <td>{{ exercice.titreExercice }}</td>
            </tr>
            <tr>
                <th>Duree_exercice</th>
                <td>{{ exercice.dureeExercice }}</td>
            </tr>
            <tr>
                <th>Frequence_exercice</th>
                <td>{{ exercice.frequenceExercice }}</td>
            </tr>
            <tr>
                <th>Etat_exercice</th>
                <td>{{ exercice.etatExercice ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Description_exercice</th>
                <td>{{ exercice.descriptionExercice }}</td>
            </tr>
            <tr>
                <th>Materiel_exercice</th>
                <td>{{ exercice.materielExercice }}</td>
            </tr>
            <tr>
                <th>Contenu_facile_exercice</th>
                <td>{{ exercice.contenuFacileExercice }}</td>
            </tr>
            <tr>
                <th>Contenu_difficile_exercice</th>
                <td>{{ exercice.contenuDifficileExercice }}</td>
            </tr>
        </tbody>
    </table>

    <div class="admin-detail-actions">
        <a href="{{ path('app_modifications_exercices_index') }}">Retour à la liste</a>
        <a href="{{ path('app_modifications_exercices_edit', {'id': exercice.id}) }}">Modifier</a>
        {{ include('modifications_exercices/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
