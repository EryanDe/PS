 {% block stylesheets %}
        <link rel="stylesheet" href="{{asset('css/header.css')}}">
{% endblock %}

{% block javascripts %}
        <script src="{{asset('JS/script.js')}}"> </script>
{% endblock %}

{% block body %}
<div class="livebar">
        <p><a href="{{ path('app_accueil') }}" target ="blank">Accéder au site</a></p>
</div>

<div class="admin-container">
    <div class="admin-dashboard-header">
        <h1><a href="{{ path('app_admin') }}">Tableau de bord</a></h1>
</div>

    <div class="admin-components">
        <h2>Gestion du site</h2>
        <a href="{{ path('app_articles2_index') }}">Gérer les articles</a>
        <a href="{{ path('app_utilisateurs_index') }}">Gérer les utilisateurs</a>
        <a href="{{ path('app_modifications_exercices_index') }}">Gérer les exercices</a>
    </div>

    <div class="admin-stats">
        <h2>Statistiques</h2>
        <p>Nombre d'utilisateurs enregistrés :<span> {{ nombreUtilisateurs }}</span></p>
        <div>Nombre d'utilisateurs par protocole :</div>
        <ul>
            {% for protocole in utilisateursParProtocole %}
                <li>{{ protocole.protocole }} : <span>{{ protocole.nombreUtilisateurs }}</span></li>
            {% endfor %}
        </ul>
        <p>Total des paiements générés : <span>{{ totalPaiements }} Euros</span></p>
    </div>

    
</div>



{% endblock %}

